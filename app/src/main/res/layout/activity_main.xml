<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="局域网前缀长度（1~32）" />

    <EditText
        android:id="@+id/prefixLengthEditText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter port number"
    android:inputType="number"
        android:text="24" />

    <Button
        android:id="@+id/rescanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rescan" />

    <!-- 帧率选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择帧率" />

    <Spinner
        android:id="@+id/frameRateSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- 码率选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择码率" />

    <Spinner
        android:id="@+id/bitrateSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- 编码格式选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择编码格式" />

    <Spinner
        android:id="@+id/encodingFormatSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择目标设备（可能需要等待扫描）" />

<Spinner
    android:id="@+id/targetDeviceSpinner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:prompt="@string/target_device_prompt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机作socket服务器的端口（闲置端口即可，1025-65535）" />

<EditText
    android:id="@+id/portEditText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter port number"
    android:inputType="number"
    android:text="57683" />

<Button
    android:id="@+id/rotateButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="旋转屏幕" />

<Switch
    android:id="@+id/zoomFitSwitch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="放大适合（暂时无效）"
    android:layout_marginTop="16dp"/>

    <!-- 启动投屏按钮 -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动投屏" />

    <!-- 重启应用按钮 -->
    <Button
        android:id="@+id/restartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重启应用（目前有bug，每次断开后需要重启）" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="似乎只能关闭，请手动打开" />

</LinearLayout>
</ScrollView>